---
# Generated by Ansible - do not edit manually.
default_poll_interval: {{ sicp_default_poll_interval | default(45) }}

tablet_defaults:
  port: {{ sicp_tablet_defaults.port | default(5000) }}
  timeout: {{ sicp_tablet_defaults.timeout | default(5) }}
  retries: {{ sicp_tablet_defaults.retries | default(2) }}
  retry_delay: {{ sicp_tablet_defaults.retry_delay | default(1) }}
  poll_interval: {{ sicp_tablet_defaults.poll_interval | default(45) }}
  ha_light: {{ sicp_tablet_defaults.ha_light | default(true) | lower }}
  ha_power_switch: {{ sicp_tablet_defaults.ha_power_switch | default(true) | lower }}

tablets:
{% for tablet in sicp_tablets %}
  - name: "{{ tablet.name }}"
    host: "{{ tablet.host }}"
{% if tablet.port is defined %}    port: {{ tablet.port }}
{% endif %}{% if tablet.timeout is defined %}    timeout: {{ tablet.timeout }}
{% endif %}{% if tablet.retries is defined %}    retries: {{ tablet.retries }}
{% endif %}{% if tablet.retry_delay is defined %}    retry_delay: {{ tablet.retry_delay }}
{% endif %}{% if tablet.poll_interval is defined %}    poll_interval: {{ tablet.poll_interval }}
{% endif %}{% if tablet.ha_light is defined %}    ha_light: {{ tablet.ha_light | lower }}
{% endif %}{% if tablet.ha_power_switch is defined %}    ha_power_switch: {{ tablet.ha_power_switch | lower }}
{% endif %}{% endfor %}

{% if sicp_mqtt is defined %}mqtt:
  host: "{{ sicp_mqtt.host }}"
  port: {{ sicp_mqtt.port | default(1883) }}
  username: {{ sicp_mqtt.username | default('') | to_json }}
  password: {{ sicp_mqtt.password | default('') | to_json }}
  base_topic: "{{ sicp_mqtt.base_topic | default('sicp') }}"
  discovery_prefix: "{{ sicp_mqtt.discovery_prefix | default('homeassistant') }}"
  client_id: "{{ sicp_mqtt.client_id | default('sicp-pi') }}"
  keepalive: {{ sicp_mqtt.keepalive | default(60) }}
  reconnect_interval: {{ sicp_mqtt.reconnect_interval | default(5) }}
  enable_tls: {{ sicp_mqtt.enable_tls | default(false) | lower }}
{% endif %}

web:
  bind_host: "{{ sicp_web.bind_host | default('0.0.0.0') }}"
  bind_port: {{ sicp_web.bind_port | default(8080) }}
  log_history: {{ sicp_web.log_history | default(2000) }}
