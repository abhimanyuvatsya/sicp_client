# Generated by Ansible - do not edit manually
mqtt:
  host: "{{ mqtt_host }}"
  port: {{ mqtt_port }}
{% if mqtt_username %}
  username: "{{ mqtt_username }}"
{% endif %}
{% if mqtt_password %}
  password: "{{ mqtt_password }}"
{% endif %}
  base_topic: "{{ mqtt_base_topic }}"
  ha_discovery_prefix: "{{ mqtt_ha_prefix }}"
  client_id: "sicp-controller-{{ inventory_hostname }}"

tablets:
{% for tablet in sicp_tablets %}
  - id: "{{ tablet.id }}"
    name: "{{ tablet.name }}"
    host: "{{ tablet.host }}"
    port: {{ tablet.port | default(5000) }}
    poll_interval: {{ tablet.poll_interval | default(30) }}
{% endfor %}

socket_timeout: {{ sicp_socket_timeout }}
socket_retries: {{ sicp_socket_retries }}
socket_retry_delay: {{ sicp_socket_retry_delay }}
web_host: "{{ sicp_web_host }}"
web_port: {{ sicp_web_port }}
log_buffer: {{ sicp_log_buffer }}
